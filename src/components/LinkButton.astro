---
const { href, ariaAnchor } = Astro.props
---
<a
    href={href}
    target="_blank"
    rel="noopener noreferrer"
    aria-label={ariaAnchor}
    class="inline-flex items-center justify-center gap-2 px-4 py-1 transition border rounded-full hover:text-gray-800 hover:bg-gray-100 hover:border-gray-700 text-white bg-gray-800 border-gray-600 text-lg"
>
    <slot />
</a>
