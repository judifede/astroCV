---
const navItems = [
	{
		title: 'Experiencia',
		label: 'Enlace a experiencia',
		url: '/',
	},
	{
		title: 'Proyectos',
		label: 'Enlace a proyectos',
		url: '/projects',
	},
	{
		title: 'Sobre mí',
		label: 'Enlace a sobre mí',
		url: '/about',
	}
]
---

<header class="fixed top-0 z-10 flex items-center justify-center my-5 w-full mx-auto">
	<nav class="flex flex-row gap-x-10 opacity-90 text-2xl p-3 rounded-xl">
		{
			navItems.map((link) => (
				<span>
					<a
						class="hover:underline text-yellow-300 font-bold underline-offset-[10px]"
						aria-label={link.label}
						href={link.url}
					>
						{link.title}
					</a>
				</span>
			))
		}
        
        <!--TODO: Cambio de idioma  -->
	</nav>
</header>

<style>
   nav {
    animation: nav-shadown 1s linear both;
    animation-timeline: scroll();
    animation-range: 0 100px;
  }

  @keyframes nav-shadown {
    to {
      @apply shadow-lg ring-1 backdrop-blur bg-gray-800/90  ring-white/10;
    }
  }
</style>