---
import '@fontsource-variable/onest';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { ViewTransitions } from 'astro:transitions';
import Hero from '../components/Hero.astro';
---

<!doctype html>
<html lang="es" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="./favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<ViewTransitions />
		<title>Porfolio de Diego Fern√°ndez - Desarrollador y Programador Web</title>
	</head>
	<body class="relative text-white" >
		<div class="absolute top-0 bottom-0 z-[-2] min-h-screen w-full bg-gray-950
      bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"></div>
		<Header/>
		<main class="container w-full mx-auto py-32 flex flex-col gap-y-20 items-center justify-center px-4 lg:max-w-4xl md:max-w-2xl md:items-start">
			<Hero />
			<slot />
		</main>
		<Footer />
	</body>
</html>

<style is:global>
	:root {
		color-scheme: dark;
	}

	html {
		font-family: "Onest Variable", system-ui, sans-serif;
		min-width: 550px;
	}

	body {
		color: rgba(255, 255, 255, 0.9);
		display: flex;
		flex-direction: column;
		min-height: 100vh;
	}

</style>
