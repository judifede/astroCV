  <section>
    <h1
      class="flex items-center justify-center md:justify-start mb-6 text-3xl font-semibold gap-x-3 text-white"
    >
      <Briefcase class="size-8" />
      Experiencia laboral
    </h1>
    <ol class="relative mt-16">
      {
        EXPERIENCIES.map((experiencie) => (
          <li>
            <ExperienceItem {...experiencie} />
          </li>
        ))
      }
    </ol>
  </section>
</Layout>
